@Library("shared-library") _

pipeline {
    environment {
        CI = 'true'
    }
    stages {
        stage('Init') {
            steps {
                helloWorld(dayOfWeek: "Thursday", name: "John")
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'node:21.6.1'
                    args '-p 3000:3000'
                }
            }
            steps {
                sh 'yarn && yarn build'
            }
        }
        stage('Containerise') {
            steps {
                script {
                    dockerBuild.login()
                    dockerBuild.build("tic-tac-toe")
                    dockerBuild.push("tic-tac-toe")
                }
            }
        }
    }
}